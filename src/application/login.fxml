<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.logIn_controller">
   <center>
      <VBox alignment="CENTER" BorderPane.alignment="CENTER">
         <children>
            <Region VBox.vgrow="ALWAYS" />
            <TextField fx:id="username_input" promptText="Username" VBox.vgrow="ALWAYS" />
            <PasswordField fx:id="password_input" promptText="Password" VBox.vgrow="ALWAYS" />
            <Region VBox.vgrow="ALWAYS" />
            <TextField fx:id="ip_input" promptText="Host's IP" VBox.vgrow="ALWAYS" />
            <AnchorPane VBox.vgrow="ALWAYS">
               <children>
                  <Button fx:id="logIn_button" alignment="CENTER" contentDisplay="BOTTOM" layoutX="214.0" layoutY="14.0" mnemonicParsing="false" onAction="#logIn" text="Log In" textAlignment="CENTER" AnchorPane.rightAnchor="1.0" AnchorPane.topAnchor="14.0" />
                  <Button fx:id="SignIn_button" layoutX="14.0" layoutY="14.0" mnemonicParsing="false" onAction="#SignIn" text="Sign In" />
               </children>
            </AnchorPane>
         </children>
      </VBox>
   </center>
   <left>
      <ImageView fitHeight="401.0" fitWidth="161.0" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER" />
   </left>
   <right>
      <Region prefHeight="400.0" prefWidth="167.0" BorderPane.alignment="CENTER" />
   </right>
   <top>
      <Region BorderPane.alignment="CENTER" />
   </top>
   <bottom>
      <Region BorderPane.alignment="CENTER" />
   </bottom>
</BorderPane>
